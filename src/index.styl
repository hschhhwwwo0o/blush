
// This file is the entry point for styles
// Here are the imports of all other styles

@require "./assets/typography.styl"


body 
    background-color #461027
    padding 0
    margin 0
    width 100vw
    height 100vh

    main
        transition-delay: .1s
        transition-duration: 1s
        background-size cover
        background-position center

    *
        user-select none

    &::-webkit-scrollbar
        width 0


    *::selection 
        background-color rgb(0, 0, 0, 0, 0)

