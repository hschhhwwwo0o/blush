#theTracklist
    width: 100vw
    height: 595px
    overflow-y: scroll
    overflow-x: hidden
    position: absolute
    left: 0
    top: 102px
    box-sizing: border-box
    padding-left: 77px
    padding-right: 77px

    &::-webkit-scrollbar
        width: 0 !important
        
    &::scrollbar 
        width: 0

    h1
        overflow: hidden
        font-family: "Cormorant Garamond"
        font-style: normal
        font-weight: normal
        font-size: 64px
        line-height: 78px
        color: white
        opacity: 0.9
        margin-top: 5px
        white-space: nowrap
        text-overflow: ellipsis
        transition-duration: .65s
        opacity: 0.8

        &:hover 
            opacity: 1
            margin-left 10px

        span
            font-family: "Cormorant Garamond"
            font-style: normal
            font-weight: normal
            font-size: 36px
            line-height: 44px

.openTracklist 
    z-index: 100 !important
    opacity: 1 !important

.closeTracklist 
    z-index: -100 !important
    opacity: 0 !important