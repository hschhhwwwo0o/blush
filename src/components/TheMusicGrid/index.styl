@require "../../assets/.env.styl"

$cover-size = 45px

#grid-tmp3
    width 100vw
    height calc(100vh - 195px)
    overflow: scroll

    &::-webkit-scrollbar
        width 0
        height: 0


#grid__header
    width calc(100% - 36px)
    height 25px
    margin-left $padding
    padding-top: 25px
    padding-bottom: 20px

    display: grid
    grid-template-columns: $cover-size 1fr 0.71fr $cover-size

    @media screen and ( min-width: 800px )
        grid-template-columns: $cover-size 1fr 0.71fr 0.6fr $cover-size

    @media screen and ( min-width: 900px )
        grid-template-columns: $cover-size 1fr 0.71fr 0.6fr 0.41fr $cover-size

    .grid__year
        display: none

        @media screen and ( min-width: 800px )
            display: block

    .grid__time
        display: none

        @media screen and ( min-width: 900px )
            display: block

    h4
        font-family: "Segoe UI Regular";
        font-style: normal;
        font-weight: 700;
        font-size: 12px;
        line-height: 16px;
        text-shadow: 0px 0px 0px 0px;

        color: #000000;