$cover-size = 43.25px
$h3-size = 14.25px
$h4-size = 12px

.track
    width calc(100% - 60px)
    height 45px
    margin-top 12px
    margin-left 30px

    display: grid
    grid-template-columns: 45px 1fr 45px


    .track__cover

        img
            width 100%
            height 100%
            object-fit: cover
            object-position: center


    .track__meta-body
        box-sizing: border-box
        padding-left: 12px

        display: grid
        grid-template-columns: 1fr .75fr


        > .track__title
            display: flex
            flex-direction: column
            justify-content: space-evenly

            margin-top -2.25px

            h3
                font-family: "Open Sans Regular";
                font-size: 14px;
                line-height: 19px;

                // font-weight bold
                // text-shadow: 0px 0px 0px black

                text-transform: capitalize;

                color: #000000;

            
            h4
                font-family: "Open Sans Regular";
                font-weight: 600;
                font-size: 12px;
                line-height: 16px;

                color: #000000;

                opacity: 0.85;


        > .track__artist

            box-sizing: border-box
            padding-top: 4px

            h3
                font-family: "Open Sans Regular";
                font-style: normal;
                font-weight: 600;
                font-size: 12px;
                line-height: 16px;

                color: #000000;


    .track__more
        display: flex
        justify-content: flex-end

        > div
            width: 2.54px;
            height: 11.6px;

            opacity 0.8

            background-size: cover
            background-image url("../../icons/more.svg")