#titlebar
    -webkit-app-region drag
    width 100vw
    height 35px
    display flex
    justify-content space-between
    box-sizing border-box
    padding-left 25px
    padding-right 15px

    z-index 100

    &__logo
        margin-top 9px

        span:nth-child(1)
            font-family: "Open Sans Bold";
            font-style: normal;
            font-weight: bold;
            font-size: 12px;

        span:nth-child(2)
            font-family: "Open Sans SemiBold";
            font-style: normal;
            font-weight: bold;
            font-size: 12px;
            margin-left 2px

    > div 
        height 100%

    &__tools 
        -webkit-app-region no-drag
        width 70px
        display: grid
        grid-template-columns: 1fr 1fr

        .titlebar__button 
            width 100%
            height 100%
            display: flex
            align-items: center
            justify-content: center

            transition-duration .35s

        #titlebar__minimize-button
            &:hover 
                background-color #BFBFBF

            > div 
                width 28%
                height 28%

                background-image url("../../icons/minimize.svg")
                background-size cover
                background-position center


        #titlebar__close-button
            &:hover 
                background-color #EC5858

            > div 
                width 28%
                height 28%

                background-image url("../../icons/close.svg")
                background-size cover
                background-position center